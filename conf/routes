# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /LoanApplication            controllers.LoanApplicationController.New()
GET     /LoanApplications           controllers.LoanApplicationController.list()
GET     /LoanApplication/:id        controllers.LoanApplicationController.read(id: Long)
POST    /LoanApplication            controllers.LoanApplicationController.save()
#POST    /LoanApplication/:id        controllers.LoanApplicationController.update(id: Long)

GET     /dbg                        controllers.DbgController.dbg()
GET     /dbg/bootstrap              controllers.DbgController.bootstrap()
GET     /environments               controllers.EnvironmentsController.list()

# Login Page
GET     /login                      controllers.LoginController.index()
GET     /logout                     com.feth.play.module.pa.controllers.Authenticate.logout
GET     /authenticate/:provider     com.feth.play.module.pa.controllers.Authenticate.authenticate(provider: String)
GET     /authenticate/:provider/denied     controllers.Application.oAuthDenied(provider: String)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
